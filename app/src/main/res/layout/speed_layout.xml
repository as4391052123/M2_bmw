<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/light_width"
    android:layout_height="@dimen/light_height"
    android:background="@drawable/bg_front_sufaceview"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_move_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/preview_lightControl_padding"
                android:text="@string/moveSpeed"
                android:textColor="@color/colorBase"
                android:textSize="@dimen/text_size_s" />

            <SeekBar
                android:id="@+id/sb_speed_move"
                style="@style/Widget.SeekBar.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_move_speed"
                android:max="10"
                android:paddingBottom="@dimen/preview_lightControl_seekbar_padding"
                android:paddingTop="@dimen/preview_lightControl_seekbar_padding" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ptz_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/preview_lightControl_padding"
                android:text="@string/ptzSpeed"
                android:textColor="@color/colorBase"
                android:textSize="@dimen/text_size_s" />

            <SeekBar
                android:id="@+id/sb_ptz_move"
                style="@style/Widget.SeekBar.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_ptz_speed"
                android:max="10"
                android:paddingBottom="@dimen/preview_lightControl_seekbar_padding"
                android:paddingTop="@dimen/preview_lightControl_seekbar_padding" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>